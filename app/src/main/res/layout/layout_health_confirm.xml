<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            style="@style/CustomTitle.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Name" />

        <TextView
            android:id="@+id/txtName"
            style="@style/CustomTitle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            style="@style/CustomTitle.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Mobile No." />

        <TextView
            android:id="@+id/txtMobile"
            style="@style/CustomTitle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            style="@style/CustomTitle.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Email ID" />

        <TextView
            android:id="@+id/txtEmail"
            style="@style/CustomTitle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            style="@style/CustomTitle.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="City" />

        <TextView
            android:id="@+id/txtCity"
            style="@style/CustomTitle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            style="@style/CustomTitle.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Existing Insurance?" />

        <TextView
            android:id="@+id/txtPolicyIs"
            style="@style/CustomTitle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            style="@style/CustomTitle.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Policy Type" />

        <TextView
            android:id="@+id/txtPolicyType"
            style="@style/CustomTitle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            style="@style/CustomTitle.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Policy Expiry Date" />

        <TextView
            android:id="@+id/txtPolicyExpiry"
            style="@style/CustomTitle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            style="@style/CustomTitle.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Existing Disease" />

        <TextView
            android:id="@+id/txtExistingDisease"
            style="@style/CustomTitle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            style="@style/CustomTitle.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Insurance Name" />

        <TextView
            android:id="@+id/txtInsuranceName"
            style="@style/CustomTitle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

    </TableRow>
</LinearLayout>
